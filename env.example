# Supabase 配置
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Resend 邮件服务配置
RESEND_API_KEY=your_resend_api_key

# 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# AI服务配置（选择以下一种或多种方式）
# ===========================================

# AI服务提供商选择: n8n | zapier | openai | claude | custom
AI_PROVIDER=n8n

# N8N工作流配置
AI_WEBHOOK_URL=https://your-n8n-instance.com/webhook/ai-chat
N8N_API_KEY=your_n8n_api_key

# OpenAI配置 
OPENAI_API_KEY=sk-your_openai_api_key
AI_MODEL=gpt-3.5-turbo

# Claude配置
CLAUDE_API_KEY=your_claude_api_key

# Zapier配置
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_hook

# 自定义AI API配置
AI_API_ENDPOINT=https://your-custom-ai-api.com/chat
AI_API_KEY=your_custom_api_key

# AI服务通用配置
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30000

# ===========================================
# N8N工作流集成说明
# ===========================================
# 
# 1. 在N8N中创建一个新的工作流
# 2. 添加Webhook节点作为触发器
# 3. 配置AI处理节点（如OpenAI、Claude等）
# 4. 添加响应节点返回AI回复
# 5. 将Webhook URL配置到AI_WEBHOOK_URL
# 
# 期望的N8N工作流数据格式：
# 输入：
# {
#   "message": "用户消息",
#   "userId": "用户ID",
#   "sessionType": "会话类型",
#   "conversationHistory": [],
#   "userProfile": {},
#   "metadata": {}
# }
# 
# 输出：
# {
#   "response": "AI回复内容",
#   "tokensUsed": 123,
#   "confidence": 0.95,
#   "suggestions": [],
#   "metadata": {}
# }
# ===========================================